<Window x:Class="ryle.Pages.Autor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ryle.Pages"
        mc:Ignorable="d"
        Title="Autor" Height="450" Width="800">
    <Grid>
        <Button FontSize="15 " FontWeight="Bold" Background="Aqua" VerticalAlignment="Top" HorizontalAlignment="Right" Click="mainClick">Назад</Button>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="login"></TextBox>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox x:Name="pass"></PasswordBox>
            <Button Click= "Enter">Войти</Button>
           
        </StackPanel>
    </Grid>
</Window>
